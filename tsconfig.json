{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "src/custom.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}